<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  </head>

  <body>
      <nav class="navbar sticky-top navbar-dark bg-dark">

              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="btn btn-success" href="/new">Cadastrar Nova Empresa</a>
                    <a class="btn btn-success" href="/newFuncio">Cadastrar E Listar Funcionários</a>
                    <a class="btn btn-success" href="/">Página Principal</a>
                    </li>
              </ul>

      </nav>
     
      <div class="divisao" class="col-12 col-md-8">
          <h1><%= title %></h1>
      </div>

  <div class="col-12 col-md-12">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="colgroup">Nome</th>
          <th scope="col">Numero</th>
          <th>Deletar</th>
          <th>Editar</th>

        </tr>
      </thead>
      <tbody>
          <% docs.forEach(function(dadosempresa){ %>
            <tr>
                <td><%= dadosempresa.nome  %></td>
                <td><%= dadosempresa.numero  %></td>
                <td><a href="/editar/<%= dadosempresa._id %>">
                  Editar
                 </a></td>
                <td><a href="/deletar/<%= dadosempresa._id %>" 
                  onclick="return confirm('Tem certeza que deseja excluir?')">
                  Excluir
                 </a></td>
            </tr>
          <%})%>
      </tbody>
    </table>
  </div>


  

    <script language="javascript" src="js/bootstrap.min.js"></script>
  </body>
</html>

  